{
    "name": "@bitforgehq/yago-ar-button",
    "version": "1.0.0",
    "private": false,
    "main": "dist/ar-button.umd.min.js",
    "license": "MIT",
    "homepage": "https://github.com/bitforge/genie-ar-button",
    "sideEffects": false,
    "scripts": {
        "serve": "vue-cli-service serve --mode development",
        "serve:dev": "yarn serve:dev",

        "lint": "vue-cli-service lint",
        "prettify": "npx prettier --write src",

        "build": "yarn build:dev",
        "deploy": "yarn deploy:dev",

        "build:dev": "vue-cli-service build --mode staging --target wc --name ar-button src/components/ar-button.vue",
        "deploy:dev": "gsutil rm -a gs://ar-button-dev/ar-button/** && gsutil cp -z js dist/*.js gs://ar-button-dev/ar-button/ && gsutil setmeta -h \"Cache-Control: no-store, no-cache\" gs://ar-button-dev/ar-button/*",

        "build:prod": "vue-cli-service build --target wc --name ar-button src/components/ar-button.vue",
        "deploy:prod": "gsutil rm -a gs://ar-button/ar-button/** && gsutil cp -z js dist/*.js gs://ar-button/ar-button/",

        "build:npm": "vue-cli-service build --target lib --name ar-button src/components/ar-button.vue",
        "deploy:npm": "npm publish"
    },
    "dependencies": {
        "qr-code-styling": "1.5.0",
        "vue": "^2.6.11",
        "vue-class-component": "^7.2.3",
        "vue-property-decorator": "^8.4.2"
    },
    "devDependencies": {
        "@types/qrcode": "^1.3.5",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/eslint-config-typescript": "^5.0.2",
        "eslint": "^6.7.2",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-vue": "^6.2.2",
        "prettier": "^2.2.1",
        "typescript": "~3.9.3",
        "vue-template-compiler": "^2.6.11",
        "webpack-bundle-analyzer": "^4.4.2"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "supports es6",
        "not dead"
    ]
}
